<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MessageActivity">

    <Button
        android:id="@+id/btn_text_message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/str_text_message"
        app:layout_constraintBottom_toTopOf="@id/btn_issue_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_issue_message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/str_issue_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_text_message" />
</android.support.constraint.ConstraintLayout>